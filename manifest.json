{
  "manifest_version": 2,
  "name": "Auto URL Pinger",
  "version": "1.0",

  "description": "Prevent dynos from falling asleep.",
  "icons": {
    "16": "",
    "48": "",
    "128": ""
  },


  "background": {
    "scripts" : ["background.js"]
  },


  "browser_action": {
    "default_icon": {
      "19": "",
      "38": ""
    },
    "default_title": "",
    "default_popup": "popup.html"
  },

  "permissions": [
    "alarms",
    "storage",
    "https://ajax.googleapis.com/",
    "*://*/*"
  ]
}
